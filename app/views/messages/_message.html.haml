.main_chat__contents__content
  .main_chat__contents__content__user
    .main_chat__contents__content__user__name
      = message.user.name
    .main_chat__contents__content__user__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main_chat__contents__content__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?